# Environment Variables
# Copy this to .env and fill in your actual values

# ============================================================================
# REQUIRED - Database
# ============================================================================
DATABASE_URL=your-postgres-database-url

# ============================================================================
# REQUIRED - JWT Authentication
# ============================================================================
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long-change-this-in-production
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# ============================================================================
# REQUIRED - SendGrid (for email invitations)
# ============================================================================
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@criticalasset.com

# ============================================================================
# REQUIRED - AWS S3 (for file uploads)
# ============================================================================
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET_NAME=critical-asset-files

# ============================================================================
# OPTIONAL - CloudFront CDN (can use S3 directly initially)
# ============================================================================
# CLOUDFRONT_URL=https://your-cloudfront-domain.cloudfront.net

# ============================================================================
# OPTIONAL - Stripe (only needed when implementing payments)
# ============================================================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
# STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret (get this after setting up webhook)

# ============================================================================
# Frontend URL
# ============================================================================
FRONTEND_URL=http://localhost:3000

# ============================================================================
# Service Ports (for microservices - don't change unless needed)
# ============================================================================
AUTH_SERVICE_PORT=3001
FILE_SERVICE_PORT=3002
STRIPE_SERVICE_PORT=3003
AI_ADDON_SERVICE_PORT=3004
GRAPHQL_PORT=4000

# ============================================================================
# Service URLs (Internal Communication)
# ============================================================================
AUTH_SERVICE_URL=http://localhost:3001
AI_ADDON_SERVICE_URL=http://localhost:3004

# ============================================================================
# Environment
# ============================================================================
NODE_ENV=development
