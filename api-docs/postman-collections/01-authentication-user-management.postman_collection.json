          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const response = pm.response.json();",
                  "if (response.data) {",
                  "    const authData = response.data.login || response.data.signup || response.data.acceptInvitation || response.data.refreshToken;",
                  "    if (authData && authData.accessToken) {",
                  "        pm.environment.set('access_token', authData.accessToken);",
                  "        pm.environment.set('refresh_token', authData.refreshToken);",
                  "        if (authData.user) {",
                  "            pm.environment.set('user_id', authData.user.id);",
                  "            pm.environment.set('company_id', authData.user.companyId);",
                  "        }",
                  "        console.log('\u2705 Tokens saved');",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
